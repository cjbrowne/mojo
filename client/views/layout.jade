doctype 5
html(lang="#{i18n.lng()}")
	head
		title= t('title')
		script(type='text/javascript', src='/socket.io/socket.io.js')
		script(type='text/javascript', src='/js/vendor/jquery.js')
		script(type='text/javascript', src='/js/vendor/require.js', data-main='/js/Mojo.js')
		link(rel='stylesheet',type='text/css',href='/css/main.css')
	body
		#header
			img#logo(src='/img/logo.png')
			ul#menu
				li
					input#enterGame(type="button",value="#{t('mainmenu.entergame')}")
			include infobox
			include login
			#languageBar
				span.label=t('chooseLang')
				select#languageChooser
					each l in supportedLanguages
						if (l == i18n.lng())
							option(selected="selected",value="#{l}")= t(l)
						else
							option(value="#{l}")= t(l)
		#content
			block content